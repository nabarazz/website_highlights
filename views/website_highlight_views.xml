<odoo>
	<record id="view_website_highlight_form" model="ir.ui.view">
		<field name="name">
			website.highlight.form
		</field>
		<field name="model">
			website.highlight
		</field>
		<field name="arch" type="xml">
			<form string="Website Highlight">
				<sheet>
					<group>
						<field name="name" />
						<field name="message" />
						<field name="active" />
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="view_website_highlight_tree" model="ir.ui.view">
		<field name="name">
			website.highlight.tree
		</field>
		<field name="model">
			website.highlight
		</field>
		<field name="arch" type="xml">
			<tree string="Website Highlights">
				<field name="name" />
				<field name="message" />
				<field name="active" />
			</tree>
		</field>
	</record>
</odoo>
